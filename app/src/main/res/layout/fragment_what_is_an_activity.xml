<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.module1.WhatIsAnActivityFragment">

    <Button
        android:id="@+id/what_is_an_activity_next_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:padding="4dp"
        android:text="@string/next"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/what_is_a_fragment_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/module_1_what_is_an_activity_description"
            android:textColor="@color/textBody"
            android:textSize="@dimen/text_size_body_2" />

        <Button
            android:id="@+id/what_is_an_activity_camera_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorAccent"
            android:padding="4dp"
            android:text="@string/module_1_go_to_camera"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/what_is_an_activity_how_to_use_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/module_1_how_to_use_activities"
            android:textColor="@color/textBody"
            android:textSize="@dimen/text_size_body_2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>